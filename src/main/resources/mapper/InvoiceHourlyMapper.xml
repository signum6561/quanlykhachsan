<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="${ibatis.dao}.InvoiceHourlyDAO">
    <resultMap 
        id="invoiceHourlyRM" 
        type="InvoiceHourly" 
        extends="${ibatis.dao}.InvoiceDAO.invoiceHourlyRM" 
    />

    <select 
        id="selectAll" 
        resultMap="invoiceHourlyRM" 
        timeout="60000"
    >
        select i.*, d.rentalDays
        from Invoice i
        join InvoiceDaily d 
        on i.id = d.invoiceId
    </select>

    <insert id="insert" parameterType="InvoiceHourly"> 
        insert into InvoiceHourly(invoiceId, rentalHours) 
        values(#{id}, #{rentalHours})
    </insert>

    <!-- <update id="update" parameterType="InvoiceHourly">
        update InvoiceHourly
        set rentalHours = #{rentalHours}
        where invoiceId = #{id}
    </update> -->
</mapper>